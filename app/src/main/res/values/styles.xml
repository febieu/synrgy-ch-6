<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="heading_1">
        <item name="android:textSize">@dimen/heading_1</item>
        <item name="android:fontFamily">@font/sharp_axe</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="heading_2">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>